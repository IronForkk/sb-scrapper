# Tarayıcı Ayarları
# Tarayıcı headless modda çalışır mı?
# true: Arayüz olmadan çalışır (sunucu için)
# false: Tarayıcı penceresi görünür (debug için)
HEADLESS=true

# Sayfa yüklendikten sonra beklenecek süre (saniye)
# JavaScriptlerin oturması için bekler.
# Düşük değerler sayfanın tam yüklenmemesine neden olabilir.
# Önerilen: 5-15 arası
WAIT_TIME=8

# User Agent platform seçimi
# windows: Windows tarayıcıları
# macos: macOS tarayıcıları
# linux: Linux tarayıcıları
USER_AGENT_PLATFORM=windows

# Page Load Timeout (saniye)
# Sayfa yükleme zaman aşımı süresi.
# Önerilen: 30-120 arası
PAGE_LOAD_TIMEOUT=60

# Body Check Wait Time (saniye)
# JavaScript yüklenmesi için bekleme süresi.
# Önerilen: 1-3 arası
BODY_CHECK_WAIT_TIME=2

# Page Reload Wait Time (saniye)
# Sayfa yeniden yüklendiğinde bekleme süresi.
# Önerilen: 3-7 arası
PAGE_RELOAD_WAIT_TIME=5

# API Ayarları
HOST=0.0.0.0
PORT=8000

# Loglama Ayarları
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_INFO_FILE=info.log
LOG_ERROR_FILE=error.log

# Black-List Ayarları
BLACKLIST_FILE=black-list.lst

# PostgreSQL Ayarları
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=sb_scrapper
POSTGRES_USER=sb_user
POSTGRES_PASSWORD=change_me_strong_password

# Connection Pool Ayarları
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20
POSTGRES_MAX_RETRIES=5

# Log Retention (Gün cinsinden) - Tüm loglar 30 gün saklanır
LOG_RETENTION_DAYS=30
ERROR_RETENTION_DAYS=30
REQUEST_RETENTION_DAYS=30
DOMAIN_STATS_RETENTION_DAYS=30

# Log Viewer Ayarları
LOG_VIEWER_PORT=5000

# Logging Ayarları
# PostgreSQL'e log yazmayı açar/kapatır. ZORUNLU: true olmalıdır.
POSTGRES_LOGGING_ENABLED=true

# Konsola log yazmayı açar/kapatır. Debug için kullanışlıdır.
CONSOLE_LOGGING_ENABLED=true

# Structured Logging (JSON format) açar/kapatır.
# true: Loglar JSON formatında yazılır (log aggregation araçları için)
# false: Loglar insan okunabilir formatta yazılır
STRUCTURED_LOGGING_ENABLED=false

# Canvas Noise Ayarları (-50 ile 50 arası değerler)
# Canvas fingerprinting bypass için kullanılır
NOISE_MIN_VALUE=-20
NOISE_MAX_VALUE=20

# Request Logging Ayarları
LOG_REQUEST_BODY=true
LOG_REQUEST_HEADERS=true
LOG_REQUEST_QUERY=true

# Request Log Sınırlamaları
MAX_REQUEST_BODY_SIZE=10240  # 10KB
SENSITIVE_HEADERS=authorization,cookie,x-api-key,token,x-auth-token

# Rate Limiting Ayarları (Opsiyonel - Intranet için varsayılan kapalı)
RATE_LIMITING_ENABLED=false
RATE_LIMIT_REQUESTS=100  # 100 istek
RATE_LIMIT_PERIOD=60  # 60 saniyede

# CORS Ayarları (Opsiyonel - Intranet için varsayılan kapalı)
CORS_ENABLED=false
CORS_ORIGINS=*
CORS_METHODS=*
CORS_HEADERS=*

# Authentication Ayarları (Opsiyonel - Intranet için varsayılan kapalı)
AUTH_ENABLED=false
AUTH_API_KEY=your-secret-api-key-here

# Response Caching (Opsiyonel - Intranet için varsayılan kapalı)
RESPONSE_CACHING_ENABLED=false
RESPONSE_CACHE_TTL=300  # 5 dakika
RESPONSE_CACHE_MAX_SIZE=100

# Log Viewer Ayarları
STATS_LIMIT=1000
DEBUG=false
EXPORT_LIMIT=5000
LIVE_METRICS_HOURS=1
